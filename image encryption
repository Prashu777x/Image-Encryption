        <h2 class="text-3xl font-bold mb-8 text-center">Quick Start</h2>
        <div class="space-y-6 font-mono">
            <div>
                <p class="text-gray-500 mb-2"># Encrypting an image</p>
                <div class="code-block p-4 rounded-lg overflow-x-auto">
                    imcrypt -e secret.png -i locked.png -p key.txt
                </div>
            </div>
            <div>
                <p class="text-gray-500 mb-2"># Decrypting back</p>
                <div class="code-block p-4 rounded-lg overflow-x-auto border-l-purple-500">
                    imcrypt -d locked.png -k key.txt -i original.png
                </div>
            </div>
        </div>
    </section>

